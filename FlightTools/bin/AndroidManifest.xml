<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.flighttools.view"
    android:smallScreens="true"
    android:normalScreens="true"
    android:largeScreens="true"
    android:anyDensity="true"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/> 
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name="com.app.flighttools.ui.MainActivity"
            android:screenOrientation="portrait"	
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.flighttools.ui.EngineeringActivity"
            android:screenOrientation="portrait"	>
        </activity>
        <activity
            android:name="com.app.flighttools.ui.DictionaryActivity"
            android:screenOrientation="portrait"	>
        </activity>
        <activity
            android:name="com.app.flighttools.ui.AbbreviationActivity"
            android:screenOrientation="portrait"	>
        </activity>
        <activity
            android:name="com.app.flighttools.ui.IcaoIataActivity"
            android:screenOrientation="portrait"	>
        </activity>
        <activity
            android:name="com.app.flighttools.ui.CalculatorActivity"
            android:screenOrientation="portrait"	>
        </activity>
    </application>

</manifest>
